  wx:for-item="xxx"
  wx:for-index='yyy'
 -->
 <!-- 
   wx:key 的作用
   dom diff对比 提高性能
  -->
<block wx:for="{{[[1,2,3],['a','b','c'],['A','B','C']]}}" wx:for-item='a' wx:key='{{index}}'>
  <block wx:for="{{a}}" wx:for-item='b' wx:key="{{index}}">
    <view>{{b}}</view>
  </block>
</block>